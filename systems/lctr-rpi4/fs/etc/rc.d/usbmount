try_mount_storage()
{
    n=0; while [ $n -lt 30 ]; do
             /bin/mount "$1" /opt/lsts/dune/log

             if [ $? -eq 0 ]; then
                 return 0
             fi

             sleep 1
             let n++
         done

    return 1
}

start()
{
    try_mount_storage /dev/sda1
    echo "* USB Mounted in /opt/lsts/dune/log"
}

stop()
{
    /bin/umount /dev/sda1
    echo "* USB Umounted"
}

