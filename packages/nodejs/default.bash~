version=\
(
    '0.10.18'
)

url=\
(
    "http://nodejs.org/dist/v0.10.18/node-v$version.tar.gz"
)

md5=\
(
    '8b905b6013b82fb7076b02a6c881f9a6'
)

maintainer=\
(
    'Jose Pinto <zepinto@fe.up.pt>'
)

configure()
{
    "../node-v$version/configure" --without-snapshot --prefix="$cfg_dir_toolchain"
}

build()
{
    cd "../node-v$version"
    $cmd_make
}


host_install()
{
    $cmd_make install
}

